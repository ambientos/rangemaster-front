extends ./layout/skeleton.pug

block meta
	title News

block top
	- var currentMenuItem = 'news';
	+header('overlay')

	+title({title: 'News', bg: '20'})

block content
	main.main
		.container.container-article-list
			.main-content
				.article-year
					span.article-year-label Year: 
					span.article-year-n 2019

				.article-list
					- var n = 0
					while n < 8
						- n++
						article.article-list-item
							.article-list-item-date 20.11.19
							a.article-list-item-title(href='/') Lorem ipsum dolor sit amet, consectetur
							.article-list-item-excerpt
								p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur bibendum fermentum pretium. Praesent at consequat neque. Praesent ut lectus rutrum, gravida turpis eget, lobortis libero. Donec est lorem, blandit quis imperdiet ut, placerat sed ante. Proin suscipit cursus ultricies.

				ul.pagination.justify-content-center
					li.page-item.active
						a.page-link(href='/') 1
					li.page-item
						a.page-link(href='/') 2
					li.page-item
						a.page-link(href='/') 3