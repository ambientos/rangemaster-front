extends ./layout/skeleton.pug

block meta
	title News

block top
	- var currentMenuItem = 'news';
	+header('overlay')

	+title({title: 'News', bg: '20'})

block content
	main.main
		.container.container-article-list
			.main-content
				.article-year
					span.article-year-label Year: 
					a.article-year-nav._prev(href='/')
						span.screen-reader-text Previous
					span.article-year-n 2019
					a.article-year-nav._next(href='/')
						span.screen-reader-text Next

				.article-list
					- var n = 0
					while n < 8
						- n++
						article.article-list-item
							.row
								.col-md-4
									figure.article-list-item-thumb
										img.img-fluid.img-block(
											src='t/18.jpg'
											alt)
								.col-md-8
									.d-md-flex.justify-content-between
										a.article-list-item-title(href='/') Lorem ipsum dolor sit amet, consectetur
										.article-list-item-date
											time(datetime='2019-11-20T17:00:00+03:00') 20.11.19
									.article-list-item-excerpt
										p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur bibendum fermentum pretium. Praesent at consequat neque. Praesent ut lectus rutrum, gravida turpis eget, lobortis libero. Donec est lorem, blandit quis imperdiet ut, placerat sed ante. Proin suscipit cursus ultricies.

				ul.pagination.justify-content-center
					li.page-item.active
						a.page-link(href='/') 1
					li.page-item
						a.page-link(href='/') 2
					li.page-item
						a.page-link(href='/') 3