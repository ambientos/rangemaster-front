extends ./layout/skeleton.pug

block meta
	title Downloads

block top
	- var currentMenuItem = 'downloads';
	+header('overlay')

	+title({title: 'Downloads', bg: '22'})

block content
	main.main
		.container
			.d-md-flex
				aside.main-side
					.main-side-title.d-none.d-md-block Folders
					+menuSide([{id: 1, title: 'Resources'}, {id: 2, title: 'Manuals'}, {id: 3, title: 'Software demos and freeware'}, {id: 4, title: 'Media'}], 4)

				.main-content
					.row
						- var i = 0;
						while i < 4
							- i++;
							.product-manual-item.col-md-6
								figure
									a(
										href='t/27.jpg'
										data-fancybox='gallery')
										img.img-fluid.img-block(
											src='t/27.jpg'
											alt)