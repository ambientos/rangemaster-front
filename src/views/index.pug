	+promoGrid([{thumb: '11', label: 'Downloads', title: 'Shooting range software'}, {thumb: '4', label: 'Catalog', title: 'Shooting range devices'}, {thumb: '12', label: 'Distributors', title: 'Successfully cooperate'}, {thumb: '13', label: 'Competitions', title: 'Keep track of the competition'}])

	section.widget._text._gray.product-grid-container
